{
   "compilerOptions": {
     "target": "es2019",
     "module": "commonjs",
     "strict": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "allowSyntheticDefaultImports": true,
     "outDir": "./dist", // Carpeta donde se guardarán los archivos compilados
     "rootDir": "./src", // Carpeta donde se encuentra el código fuente
     "declaration": true,
     "sourceMap": true
   },
   "include": ["./src/**/*.ts"], // Rutas relativas a los archivos TypeScript que quieres incluir
   "exclude": ["node_modules"]
 }
